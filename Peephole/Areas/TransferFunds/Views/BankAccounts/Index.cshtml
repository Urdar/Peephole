@model IEnumerable<Peephole.Areas.TransferFunds.Models.BankAccountModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("New Account", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Type
        </th>
        <th>
           Number
        </th>
        <th>
          Name
        </th>
        <th>
          Balance
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccountType.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountData.AccountNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountData.AccountName)
        </td>

        <td>
           

            @Html.DisplayFor(modelItem => item.AccountData.Balance)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AccountData.AccountNumber }) |
            @Html.ActionLink("Details", "Details", new { id=item.AccountData.AccountNumber })
           
        </td>
    </tr>
}

</table>
